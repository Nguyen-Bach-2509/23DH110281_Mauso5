<style type="text/css">
    html {
        font-size: 14px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
    }

    body{
        background-color: #808080;
    }

    #container  {
        border:2px solid #ff0000;
        border-radius: 10px;
    }

    header{
        background-color:burlywood;
        border:2px solid #000000;
        padding: 10px;
        display:flex;
        justify-content:space-between;
        align-items:center;
    }

    .logo img{
        height:50px;
    }

    nav ul{
        list-style-type:none;
        display:flex;
    }

    nav ul li{
        margin-left:20px;
    }

    nav ul li a{
        text-decoration: none;
        color:#000000;
        font-weight:bold;
    }

</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="container">
        <header>
            <div class="logo">
                <img src="https://static.vecteezy.com/system/resources/thumbnails/024/553/676/small_2x/skull-wearing-crown-logo-skull-king-sticker-pastel-cute-colors-generative-ai-png.png" alt="logo" />
                <h1>Trang web E-comerce</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="~/Home/Trangchu">Home</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href="~/Product/ShoppingCart">Giỏ Hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
        </header>
        <section>
            <div id="banner"></div>
            <div>
                @RenderBody()
            </div>
        </section>
        <footer>
            FOOTER         
        </footer>
    </div> 
</body>
</html>
